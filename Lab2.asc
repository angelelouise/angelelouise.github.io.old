  glClearColor(1.0, 1.0, 1.0, 1.0);
  glOrtho (0, 256, 0, 256, -1 ,1);
}

void display(){
	glClear(GL_COLOR_BUFFER_BIT);
  	glColor3f (r, g, b);
	int x1=40,x2=100,y1=200,y2=10,x,y;
	int dx, dy, pk;
	  setPixel(x1,y1);
      x=x1;
	  y=y1;
      dx = x2-x1;
      dy = y2-y1;
	  pk=2*dy-dx;
	int i;
	for(i=1; i<=dx; i++){
      setPixel(x, y);
      if(pk<0){
            pk =pk + 2*dx;
	  }
	  else{
		  	pk=pk+2*dy-2*dx;
   			++y;
	  }
	  ++x;
  	  setPixel(x,y);
	}
	  glFlush();
}
void setPixel(int x,int y){
  glBegin(GL_POINTS);
  glVertex2i(x,y);
  glEnd();

}

